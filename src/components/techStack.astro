---
import {
    techDataIKnow,
    techDataISecondary,
    techDataIWantLearn,
} from "@/lib/techData";
import CardTech from "./cardTech.astro";
---

<section class="bg-black h-full text-white">
    <div class="flex items-center justify-evenly h-full w-full gap-2">
        <div class="flex flex-col items-center justify-evenly h-full">
            <h2 class="text-4xl font-bold mt-5 text-balance">
                las tecnologías que uso en mi dia a dia
            </h2>
            <p class="text-balance">para construir proyectos increíbles</p>
        </div>

        <div class="grid grid-cols-2 grid-rows-auto gap-2">
            {/* Tecnologias que manejos */}
            <CardTech tech={techDataIKnow} title="tecnologias que manejos" />

            {/* Tecnologias que blandas */}
            <CardTech
                tech={techDataISecondary}
                title="tecnologias que blandas"
            />

            {/* Tecnologias que quiero aprender */}
            <CardTech
                tech={techDataIWantLearn}
                title="tecnologias que quiero aprender"
                className="col-span-2"
            />
        </div>
    </div>
</section>
